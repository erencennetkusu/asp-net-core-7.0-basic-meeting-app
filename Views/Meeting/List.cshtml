@model List<UserInfo>
<main class="text-center">
<h1 class="h4">Toplantı'ya katılan Kullanıcılar</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım Durumu</td>
            <td>İşlem</td>
        </tr>
    </thead>

    <tbody>

        @foreach(var user in Model){
                var userDurum = user.WillAttend == true ? "evet" : "hayır";
                var classname = user.WillAttend == true ? "table-success" : "table-danger";


            <tr class="@classname">
                <td>@user.Name</td>
                <td>@userDurum</td>
                <td><a class="btn btn-primary" href="/meeting/Details/@user.Id">Detay</a></td>
        </tr>

        }


          
      
    </tbody>
</table>

    <p class="table-bordered">Bu toplantı'ya @ViewBag.userCount kişi katılıyor</p>
</main>